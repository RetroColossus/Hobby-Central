       <div id="fh5co-product">
            <div class="container">
                <div class="row animate-box">
                    <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                        <h2>Add New Hobby</h2>
                        <p><em>All fields are required</em></p>
                    </div>

                </div>

                <div class="row animate-box">
                    <div class="col-md-8 col-md-offset-2 fh5co-heading">

                        <form class="new-hobby-form" action="#">
                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label for="title">Title</label>
                                    <input type="text" id="title" class="form-control" placeholder="">
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label for="your_hobby">Your Hobby</label>
                                    <textarea name="your_hobby" id="your_hobby" cols="30" rows="10"
                                        class="form-control" placeholder=""></textarea>
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label for="image_link">Image link</label>
                                    <input type="text" id="image_link" class="form-control" placeholder="A url to your image">
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label for="category">Category</label>
                                </div>
                                <div class="col-md-12">
                                    <select id="category" class="select-css">
                                        <option value="">Please choose a category</option>
                                        <option value="Music">Music</option>
                                        <option value="Life">Life</option>
                                        <option value="Art">Art</option>
                                        <option value="Science">Science</option>
                                    </select>
                                </div>

                            </div>
                            <div class="form-group mt-40 text-center">
                                <input type="submit" value="Submit" class="btn btn-primary">
                            </div>
                        </form>

                    </div>

                </div>

