
        <div id="fh5co-product">
            <div class="container">
                <div class="row animate-box">
                    <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                        <h2>Update this hobby</h2>
                        <p><em>All fields are required</em></p>
                    </div>

                </div>

                <div class="row animate-box">
                    <div class="col-md-8 col-md-offset-2 fh5co-heading">

                        <form class="edit-hobby-form" action="#">
                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label for="title">Title</label>
                                    <input type="text" id="title" class="form-control" value="{{hobby.title}}">
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label for="your_hobby">Your Hobby</label>
                                    <textarea name="your_hobby" id="your_hobby" cols="30" rows="10"
                                        class="form-control">{{hobby.your_hobby}}</textarea>
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label for="image_link">Image link</label>
                                    <input type="text" id="image_link" class="form-control" value="{{hobby.image_url}}">
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label for="category">Category</label>
                                </div>
                                <div class="col-md-12">
                                    <select id="category" class="select-css">
                                        <option value="">Please choose a category</option>
                                        <option value="Music">Music</option>
                                        <option value="Life">Life</option>
                                        <option value="Art">Art</option>
                                        <option value="Science">Science</option>
                                    </select>
                                </div>

                            </div>
                            <div class="form-group mt-40 text-center">
                                <input type="submit" value="Update" class="btn btn-primary">
                                <input type="submit" value="Delete" class="btn btn-primary delete-hobby-btn">
                            </div>

                        </form>

                    </div>

                </div>

    <script src="/javascript/delete-post.js"></script>
    <script src="/javascript/edit-post.js"></script>


